.bootstrap-datetimepicker-widget {
	padding: 4px;
	width: 220px;
	z-index: 3000;
}

.bootstrap-datetimepicker-widget > ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

.bootstrap-datetimepicker-widget table {
	width: 100%;
}
.bootstrap-datetimepicker-widget table th,
.bootstrap-datetimepicker-widget table td {
	text-align: center;
}

.bootstrap-datetimepicker-widget .datepicker-alias th:not(.dow),
.bootstrap-datetimepicker-widget .datepicker-years td > span,
.bootstrap-datetimepicker-widget .datepicker-months td > span,
.bootstrap-datetimepicker-widget .datepicker-days td,
.bootstrap-datetimepicker-widget .timepicker-picker td > span,
.bootstrap-datetimepicker-widget .timepicker-hours td,
.bootstrap-datetimepicker-widget .timepicker-minutes td,
.bootstrap-datetimepicker-widget .timepicker-seconds td {
	border-radius: 4px;
	cursor: pointer;
}
.bootstrap-datetimepicker-widget .datepicker-years td > span,
.bootstrap-datetimepicker-widget .datepicker-months td > span {
	width: 50px;
	line-height: 50px;
	float: left;
}
.bootstrap-datetimepicker-widget .timepicker-picker td > span {
	padding: 5px 7px;
}

.bootstrap-datetimepicker-widget .datepicker-alias th:not(.dow):hover,
.bootstrap-datetimepicker-widget .datepicker-years td > span:not(.active):hover,
.bootstrap-datetimepicker-widget .datepicker-months td > span:not(.active):hover,
.bootstrap-datetimepicker-widget .datepicker-days td:not(.active):hover,
.bootstrap-datetimepicker-widget .timepicker-picker td > span:hover,
.bootstrap-datetimepicker-widget .timepicker-hours td:hover,
.bootstrap-datetimepicker-widget .timepicker-minutes td:hover,
.bootstrap-datetimepicker-widget .timepicker-seconds td:hover {
	background-color: #eee;
}

.bootstrap-datetimepicker-widget .timepicker-picker table td {
	padding: 5px 0;
	font-weight: bold;
}
.bootstrap-datetimepicker-widget .timepicker-picker table td.separator {
	padding: 2px 0 5px 5px;
}
.bootstrap-datetimepicker-widget .timepicker-picker .btn-group-vertical > .btn {
	line-height: 1;
}

.bootstrap-datetimepicker-widget td.old,
.bootstrap-datetimepicker-widget td.new {
	color: #999;
}

.bootstrap-datetimepicker-widget .active {
	color: #fff;
	background-color: #428bca;
}

.bootstrap-datetimepicker-widget .divider {
	margin: 3px 0;
}

.has-error .date-time-picker-control > .input-group-btn > .btn {
	color: #a94442;
	border-color: #a94442;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
}
.has-error .date-time-picker-control > .input-group-btn > .btn:focus {
	border-color: #843534;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #ce8483;
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #ce8483;
}

.has-success .date-time-picker-control > .input-group-btn > .btn {
	color: #3c763d;
	border-color: #3c763d;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
}
.has-success .date-time-picker-control > .input-group-btn > .btn:focus {
	border-color: #2b542c;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #67b168;
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #67b168;
}

.date-time-picker-control > input[readonly]:not(:disabled) {
	cursor: text;
	background-color: #fff;
}
.date-time-picker-control > input:disabled + .bootstrap-datetimepicker-widget + .input-group-btn {
	display: none;
}